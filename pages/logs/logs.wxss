  padding: 30rpx 30rpx 10rpx 30rpx;
  border-bottom: solid;
  border-width: thin;
  border-color: #F2F2F2;
}
.AuthorText{
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.avatar1{
