/**index.wxss**/
.userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items:center;
}
.navigation{
  background: #6C5BB7;
  width: 100%;
  padding-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  
}
.back{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  
}
.back1{
  padding-left: 10rpx;
  width: 20%;
  display: flex;
  justify-content:flex-start;
}

.groupName2{
  width: 60%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.groupName{
  color: #FFFFFF;
  font-size: small;
}
.groupName3{
  padding-bottom: 5rpx;
}
.add1{
  width: 20%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding-right: 10rpx;
}
.add{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  
}

.chat-container{
  flex: 1;
  text-align: center;
  overflow-y:auto;
}

.container{
  display: flex;
    flex-direction: column;
    background: #ebebeb;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    overflow: hidden;
}
.input-panel {
    width: 100%;
    height: 90rpx;
    box-sizing: border-box;
    padding: 9rpx 20rpx 0;
    background: #f5f5f7;
    border-top:#d7d7d9 1rpx solid;
    box-sizing: border-box;
    display: flex;
}
.pic-icon {
    width: 60rpx;
    height: 44rpx;
    margin: 15rpx 10rpx 0 0;
    
    
}
.send-input {
    flex: 1;
    height: 72rpx;
    background: #fff;
    border-bottom-style: solid;
    border-color: #6C5BB7;
    border-width: thin;
    border-radius: 3px;
     
    }
.send-btn {
    width: 116rpx;
    height: 72rpx;
    line-height: 72rpx;
    border-color: #fff;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.detailInfo{
  border-bottom-style: solid;
  border-width: thin;
  border-color: #F2F2F2;
  width: 100%;
  background-color: #fff;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content:flex-start;

}
.personAvatar{
  padding-right: 10rpx;
}
.personName{
  display: flex;
  align-items:center;
  font-size:20px;
}

.message{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 10rpx;
}
.contentBack{
  width: 60%;
}
.contentText{
  font-size: 20rpx;
  background-color: #fff;
} 
.content{
  background: #fff;
}
